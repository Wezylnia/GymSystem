@model GymSystem.Mvc.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="bi bi-lock"></i> Giriş Yap</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="ReturnUrl" />
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="ornek@email.com" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                        </button>
                        
                        <div class="text-center">
                            <p class="mb-0">Hesabınız yok mu? <a asp-action="Register" class="text-decoration-none">Kayıt Ol</a></p>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light">
                    <div class="alert alert-info mb-0" role="alert">
                        <strong>Test Kullanıcıları:</strong><br/>
                        <small>
                            <strong>Admin:</strong> admin@sakarya.edu.tr / sau<br/>
                            <strong>Salon Sahibi:</strong> owner.merkez@fitzone.com / owner123<br/>
                            <strong>Üye:</strong> ayse.sahin@example.com / member123
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
