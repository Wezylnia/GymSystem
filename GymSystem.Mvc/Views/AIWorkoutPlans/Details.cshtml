@model GymSystem.Mvc.Models.AIWorkoutPlanViewModel

@{
    ViewData["Title"] = "Plan Detayı";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-robot"></i> 
                    @(Model.PlanType == "Workout" ? "Egzersiz Planı" : "Diyet Planı") Detayı
                </h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Geri
                </a>
            </div>

            <div class="card shadow">
                <div class="card-header @(Model.PlanType == "Workout" ? "bg-primary" : "bg-success") text-white">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="mb-0">
                                <i class="fas @(Model.PlanType == "Workout" ? "fa-dumbbell" : "fa-utensils")"></i>
                                Kişisel Bilgiler
                            </h4>
                        </div>
                        <div class="col-md-6 text-end">
                            <small>Oluşturulma: @Model.CreatedAt.ToString("dd MMMM yyyy HH:mm")</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Boy</h6>
                                    <h3 class="mb-0">@Model.Height <small>cm</small></h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Kilo</h6>
                                    <h3 class="mb-0">@Model.Weight <small>kg</small></h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">BMI</h6>
                                    <h3 class="mb-0">@((Model.Weight / ((Model.Height / 100) * (Model.Height / 100))).ToString("F1"))</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Vücut Tipi</h6>
                                    <h5 class="mb-0">
                                        @if (!string.IsNullOrEmpty(Model.BodyType))
                                        {
                                            <span class="badge bg-info">@Model.BodyType</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5><i class="fas fa-bullseye"></i> Hedef</h5>
                        <div class="alert alert-info">
                            @Model.Goal
                        </div>
                    </div>

                    <div class="mb-3">
                        <small class="text-muted">
                            <i class="fas fa-brain"></i> AI Model: <strong>@Model.AIModel</strong>
                        </small>
                    </div>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-header @(Model.PlanType == "Workout" ? "bg-primary" : "bg-success") text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-alt"></i> AI Tarafından Oluşturulan Plan
                    </h4>
                </div>
                <div class="card-body">
                    <div class="plan-content" style="white-space: pre-wrap; line-height: 1.8;">@Model.AIGeneratedPlan</div>
                </div>
            </div>

            <div class="mt-4 mb-5">
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-list"></i> Tüm Planlar
                </a>
                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="fas fa-trash"></i> Planı Sil
                </button>
                <button onclick="window.print()" class="btn btn-outline-secondary">
                    <i class="fas fa-print"></i> Yazdır
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Planı Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Bu planı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .plan-content {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 1.05rem;
        }

        @@media print {
            .btn, .modal, nav, footer {
                display: none !important;
            }
            .card {
                border: none;
                box-shadow: none;
            }
        }
    </style>
}