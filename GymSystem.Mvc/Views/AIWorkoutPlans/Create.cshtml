@model GymSystem.Mvc.Models.CreateAIWorkoutPlanViewModel

@{
    ViewData["Title"] = "Yeni AI Plan Oluştur";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-robot"></i> Yapay Zeka ile Plan Oluştur
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Yapay zeka, sizin için kişiselleştirilmiş egzersiz veya diyet planı oluşturacak. 
                        Bilgilerinizi girin ve isteğe bağlı olarak fotoğrafınızı yükleyin.
                    </p>

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="MemberId" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PlanType" class="form-label"></label>
                                <select asp-for="PlanType" class="form-select" asp-items="ViewBag.PlanTypes">
                                    <option value="">-- Seçiniz --</option>
                                </select>
                                <span asp-validation-for="PlanType" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="BodyType" class="form-label"></label>
                                <select asp-for="BodyType" class="form-select" asp-items="ViewBag.BodyTypes">
                                    <option value="">-- Seçiniz (Opsiyonel) --</option>
                                </select>
                                <span asp-validation-for="BodyType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Height" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Height" class="form-control" type="number" step="0.1" placeholder="örn: 175" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Height" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Weight" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Weight" class="form-control" type="number" step="0.1" placeholder="örn: 75" />
                                    <span class="input-group-text">kg</span>
                                </div>
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Goal" class="form-label"></label>
                            <textarea asp-for="Goal" class="form-control" rows="3" 
                                placeholder="örn: Kilo vermek ve kaslarımı belirginleştirmek istiyorum"></textarea>
                            <span asp-validation-for="Goal" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label for="photo" class="form-label">
                                <i class="fas fa-camera"></i> Fotoğraf Yükle (Opsiyonel)
                            </label>
                            <input type="file" id="photo" name="photo" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">
                                Fotoğraf yüklerseniz, AI daha detaylı analiz yapabilir. (Max 5MB)
                            </small>
                            <div id="imagePreview" class="mt-2"></div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Bilgi:</strong> Yapay zeka, bilgilerinize göre size özel bir plan oluşturacaktır. 
                            Bu işlem 30-60 saniye sürebilir.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <i class="fas fa-magic"></i> Planı Oluştur
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Image preview
        document.getElementById('photo').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const preview = document.getElementById('imagePreview');
            
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.innerHTML = `<img src="${e.target.result}" class="img-thumbnail" style="max-width: 300px;" />`;
                }
                reader.readAsDataURL(file);
            } else {
                preview.innerHTML = '';
            }
        });

        // Form submit - loading indicator
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Oluşturuluyor...';
            submitBtn.disabled = true;
        });
    </script>
}
