@model List<GymSystem.Mvc.Models.AIWorkoutPlanViewModel>

@{
    ViewData["Title"] = "AI Egzersiz ve Diyet Planlarım";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-robot"></i> AI Planlarım
                </h2>
                @if (User.IsInRole("Member"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Yeni Plan Oluştur
                    </a>
                }
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Henüz AI tarafından oluşturulmuş bir planınız yok.
                    @if (User.IsInRole("Member"))
                    {
                        <a asp-action="Create" class="alert-link">Hemen oluşturun!</a>
                    }
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var plan in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card shadow-sm h-100">
                                <div class="card-header @(plan.PlanType == "Workout" ? "bg-primary" : "bg-success") text-white">
                                    <h5 class="mb-0">
                                        <i class="fas @(plan.PlanType == "Workout" ? "fa-dumbbell" : "fa-utensils")"></i>
                                        @(plan.PlanType == "Workout" ? "Egzersiz Planı" : "Diyet Planı")
                                    </h5>
                                    <small>@plan.CreatedAt.ToString("dd MMMM yyyy HH:mm")</small>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <strong>Boy:</strong> @plan.Height cm
                                        </div>
                                        <div class="col-6">
                                            <strong>Kilo:</strong> @plan.Weight kg
                                        </div>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(plan.BodyType))
                                    {
                                        <div class="mb-2">
                                            <strong>Vücut Tipi:</strong> 
                                            <span class="badge bg-info">@plan.BodyType</span>
                                        </div>
                                    }

                                    <div class="mb-3">
                                        <strong>Hedef:</strong>
                                        <p class="text-muted">@plan.Goal</p>
                                    </div>

                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="fas fa-brain"></i> AI Model: @plan.AIModel
                                        </small>
                                    </div>

                                    <div class="mt-3">
                                        <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> Detayları Gör
                                        </a>
                                        @if (User.IsInRole("Member") || User.IsInRole("Admin"))
                                        {
                                            <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal@(plan.Id)">
                                                <i class="fas fa-trash"></i> Sil
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Delete Modal - Sadece yetkili kullanıcılar için -->
                        @if (User.IsInRole("Member") || User.IsInRole("Admin"))
                        {
                            <div class="modal fade" id="deleteModal@(plan.Id)" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Planı Sil</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            Bu planı silmek istediğinizden emin misiniz?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                            <form asp-action="Delete" asp-route-id="@plan.Id" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger">Sil</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        </div>
    </div>
</div>