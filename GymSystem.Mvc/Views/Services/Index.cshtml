@model List<GymSystem.Mvc.Models.ServiceViewModel>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-diagram-3"></i> Hizmetler</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
        </a>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var service in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">@service.Name</h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(service.Description))
                            {
                                <p class="card-text">@service.Description</p>
                            }
                            <ul class="list-unstyled">
                                <li><i class="bi bi-clock"></i> <strong>Süre:</strong> @service.DurationMinutes dakika</li>
                                <li><i class="bi bi-currency-dollar"></i> <strong>Fiyat:</strong> ₺@service.Price.ToString("N2")</li>
                                @if (!string.IsNullOrEmpty(service.GymLocationName))
                                {
                                    <li><i class="bi bi-building"></i> <strong>Salon:</strong> @service.GymLocationName</li>
                                }
                            </ul>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center">
                                @if (service.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                                <div>
                                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(service.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteModal@(service.Id)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Hizmeti Sil</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <strong>@service.Name</strong> hizmetini silmek istediğinizden emin misiniz?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                <form asp-action="Delete" asp-route-id="@service.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">Sil</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Henüz hizmet kaydı bulunmamaktadır.
        </div>
    }
</div>

@* Auto-dismiss is handled by _Layout.cshtml *@
