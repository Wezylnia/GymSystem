@model List<GymSystem.Mvc.Models.MembershipRequestViewModel>

@{
    ViewData["Title"] = "Üyelik Taleplerini Yönet";
}

<div class="container mt-4">
<h2 class="mb-4">
    <i class="bi bi-clipboard-check"></i> Bekleyen Üyelik Talepleri
</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Tarih</th>
                        <th>Üye</th>
                        <th>Salon</th>
                        <th>Süre</th>
                        <th>Ücret</th>
                        <th>Durum</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>
                                <small>@request.CreatedAt.ToString("dd.MM.yyyy")</small><br />
                                <small class="text-muted">@request.CreatedAt.ToString("HH:mm")</small>
                            </td>
                            <td>
                                <strong>@request.MemberName</strong>
                            </td>
                            <td>
                                <div>@request.GymLocationName</div>
                                <small class="text-muted">@request.GymLocationAddress</small>
                            </td>
                            <td>
                                <span class="badge bg-info">@request.DurationText</span>
                            </td>
                            <td>
                                <strong class="text-success">@request.Price.ToString("C2")</strong>
                            </td>
                            <td>
                                <span class="badge bg-@request.StatusCssClass">@request.StatusText</span>
                            </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-sm btn-primary" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#detailModal@(request.Id)">
                                    <i class="bi bi-eye"></i> Detay
                                </button>
                            </td>
                        </tr>

                        <!-- Detail Modal -->
                        <div class="modal fade" id="detailModal@(request.Id)" tabindex="-1">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header bg-primary text-white">
                                        <h5 class="modal-title">
                                            <i class="bi bi-clipboard-data"></i> Talep Detayı
                                        </h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <h6 class="text-muted">Üye Bilgileri</h6>
                                                <p class="mb-1"><strong>Ad Soyad:</strong> @request.MemberName</p>
                                            </div>
                                            <div class="col-md-6">
                                                <h6 class="text-muted">Salon Bilgileri</h6>
                                                <p class="mb-1"><strong>Salon:</strong> @request.GymLocationName</p>
                                                <p class="mb-0"><strong>Adres:</strong> @request.GymLocationAddress</p>
                                            </div>
                                        </div>

                                        <hr />

                                        <div class="row mb-3">
                                            <div class="col-md-4">
                                                <strong>Üyelik Süresi:</strong><br />
                                                <span class="badge bg-info fs-6">@request.DurationText</span>
                                            </div>
                                            <div class="col-md-4">
                                                <strong>Ücret:</strong><br />
                                                <span class="text-success fs-5 fw-bold">@request.Price.ToString("C2")</span>
                                            </div>
                                            <div class="col-md-4">
                                                <strong>Talep Tarihi:</strong><br />
                                                @request.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                            </div>
                                        </div>

                                        @if (!string.IsNullOrEmpty(request.Notes))
                                        {
                                            <hr />
                                            <div class="alert alert-info">
                                                <strong>Üye Notu:</strong>
                                                <p class="mb-0 mt-2">@request.Notes</p>
                                            </div>
                                        }

                                        @if (request.Status == GymSystem.Domain.Entities.MembershipRequestStatus.Pending)
                                        {
                                            <hr />
                                            <form method="post" id="approveForm@(request.Id)">
                                                @Html.AntiForgeryToken()
                                                <div class="mb-3">
                                                    <label for="adminNotes@(request.Id)" class="form-label">
                                                        <strong>Yönetici Notu (Opsiyonel)</strong>
                                                    </label>
                                                    <textarea name="adminNotes" 
                                                              id="adminNotes@(request.Id)" 
                                                              class="form-control" 
                                                              rows="3" 
                                                              placeholder="Onay veya red nedeni..."></textarea>
                                                </div>
                                            </form>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        @if (request.Status == GymSystem.Domain.Entities.MembershipRequestStatus.Pending)
                                        {
                                            <button type="button" class="btn btn-danger" 
                                                    onclick="submitAction(@request.Id, 'Reject')">
                                                <i class="bi bi-x-circle"></i> Reddet
                                            </button>
                                            <button type="button" class="btn btn-success" 
                                                    onclick="submitAction(@request.Id, 'Approve')">
                                                <i class="bi bi-check-circle"></i> Onayla
                                            </button>
                                        }
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                            Kapat
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5" role="alert">
            <i class="bi bi-info-circle fs-1"></i>
            <h4 class="mt-3">Bekleyen üyelik talebi bulunmamaktadır.</h4>
            <p>Yeni talepler geldiğinde burada görüntülenecektir.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        function submitAction(requestId, action) {
            const adminNotes = document.getElementById('adminNotes' + requestId).value;
            const isApprove = action === 'Approve';
            
            showConfirmModal({
                title: isApprove ? 'Talep Onaylama' : 'Talep Reddetme',
                message: isApprove 
                    ? `
                        <div class="text-center">
                            <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                            <p class="mt-3 mb-3">Bu üyelik talebini <strong>onaylamak</strong> istediğinizden emin misiniz?</p>
                            ${adminNotes ? `<div class="alert alert-info text-start"><strong>Not:</strong><br/>${adminNotes}</div>` : ''}
                            <div class="alert alert-success text-start">
                                <i class="bi bi-info-circle"></i> Onaylandığında üyenin üyeliği otomatik başlatılacaktır.
                            </div>
                        </div>
                    `
                    : `
                        <div class="text-center">
                            <i class="bi bi-x-circle text-danger" style="font-size: 3rem;"></i>
                            <p class="mt-3 mb-3">Bu üyelik talebini <strong>reddetmek</strong> istediğinizden emin misiniz?</p>
                            ${adminNotes ? `<div class="alert alert-info text-start"><strong>Red Nedeni:</strong><br/>${adminNotes}</div>` : ''}
                            <div class="alert alert-warning text-start">
                                <i class="bi bi-exclamation-triangle"></i> Bu işlem geri alınamaz!
                            </div>
                        </div>
                    `,
                icon: isApprove ? 'bi-check-circle' : 'bi-x-circle',
                headerClass: isApprove ? 'bg-success text-white' : 'bg-danger text-white',
                confirmText: isApprove ? 'Evet, Onayla' : 'Evet, Reddet',
                confirmClass: isApprove ? 'btn-success' : 'btn-danger',
                cancelText: 'İptal',
                onConfirm: function() {
                    // Close the detail modal first
                    const detailModal = bootstrap.Modal.getInstance(document.getElementById('detailModal' + requestId));
                    if (detailModal) {
                        detailModal.hide();
                    }
                    
                    // Create and submit form
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/MembershipRequests/' + action;
                    
                    const idInput = document.createElement('input');
                    idInput.type = 'hidden';
                    idInput.name = 'id';
                    idInput.value = requestId;
                    form.appendChild(idInput);
                    
                    if (adminNotes) {
                        const notesInput = document.createElement('input');
                        notesInput.type = 'hidden';
                        notesInput.name = 'adminNotes';
                        notesInput.value = adminNotes;
                        form.appendChild(notesInput);
                    }
                    
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token;
                    form.appendChild(tokenInput);
                    
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
    
    <!-- Hidden token for forms -->
    @Html.AntiForgeryToken()
}
