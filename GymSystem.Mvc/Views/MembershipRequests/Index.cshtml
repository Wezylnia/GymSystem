@model List<GymSystem.Mvc.Models.MembershipRequestViewModel>

@{
    ViewData["Title"] = "Üyelik Taleplerim";
    var hasActiveMembership = ViewBag.HasActiveMembership as bool? ?? false;
    var membershipEndDate = ViewBag.MembershipEndDate as DateTime?;
    var daysRemaining = ViewBag.DaysRemaining as int?;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-card-checklist"></i> Üyelik Taleplerim
        </h2>
        @if (!hasActiveMembership)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Talep Oluştur
            </a>
        }
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-circle"></i> @ViewBag.ErrorMessage
        </div>
    }

    @* Aktif Üyelik Bilgisi *@
    @if (hasActiveMembership && membershipEndDate.HasValue)
    {
        <div class="alert alert-info border-info shadow-sm mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle fs-3 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-2">
                        <i class="bi bi-check-circle-fill text-success"></i> Aktif Üyeliğiniz Bulunmaktadır
                    </h5>
                    <p class="mb-1">
                        <strong>Üyelik Bitiş Tarihi:</strong> @membershipEndDate.Value.ToString("dd.MM.yyyy")
                    </p>
                    <p class="mb-0">
                        <strong>Kalan Süre:</strong> 
                        @if (daysRemaining.HasValue)
                        {
                            if (daysRemaining.Value > 30)
                            {
                                <span class="badge bg-success">@daysRemaining gün kaldı</span>
                            }
                            else if (daysRemaining.Value > 7)
                            {
                                <span class="badge bg-warning">@daysRemaining gün kaldı</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@daysRemaining gün kaldı - Yakında yenilenebilir!</span>
                            }
                        }
                    </p>
                    <hr class="my-2">
                    <p class="mb-0 text-muted small">
                        <i class="bi bi-lightbulb"></i> Mevcut üyeliğiniz bitmeden yeni talep oluşturamazsınız. 
                        Üyeliğiniz sona erdikten sonra yeni bir talep açabilirsiniz.
                    </p>
                </div>
            </div>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var request in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-@request.StatusCssClass text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">@request.GymLocationName</h5>
                                <span class="badge bg-light text-dark">@request.StatusText</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <i class="bi bi-geo-alt text-muted"></i> @request.GymLocationAddress
                            </p>
                            <hr>
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Üyelik Süresi:</strong>
                                </div>
                                <div class="col-6 text-end">
                                    <span class="badge bg-info">@request.DurationText</span>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Ücret:</strong>
                                </div>
                                <div class="col-6 text-end">
                                    <span class="text-success fw-bold">@request.Price.ToString("C2")</span>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Talep Tarihi:</strong>
                                </div>
                                <div class="col-6 text-end">
                                    @request.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(request.Notes))
                            {
                                <hr>
                                <div class="alert alert-info mb-0">
                                    <strong>Notunuz:</strong>
                                    <p class="mb-0 mt-1">@request.Notes</p>
                                </div>
                            }

                            @if (request.Status == GymSystem.Domain.Entities.MembershipRequestStatus.Approved && !string.IsNullOrEmpty(request.AdminNotes))
                            {
                                <hr>
                                <div class="alert alert-success mb-0">
                                    <strong>Onay Notu:</strong>
                                    <p class="mb-0 mt-1">@request.AdminNotes</p>
                                    <small class="text-muted">Onay Tarihi: @request.ApprovedAt?.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                            }

                            @if (request.Status == GymSystem.Domain.Entities.MembershipRequestStatus.Rejected && !string.IsNullOrEmpty(request.AdminNotes))
                            {
                                <hr>
                                <div class="alert alert-danger mb-0">
                                    <strong>Red Nedeni:</strong>
                                    <p class="mb-0 mt-1">@request.AdminNotes</p>
                                    <small class="text-muted">Red Tarihi: @request.RejectedAt?.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                            }
                        </div>
                        @if (request.Status == GymSystem.Domain.Entities.MembershipRequestStatus.Pending)
                        {
                            <div class="card-footer">
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Bu talebi silmek istediğinize emin misiniz?');">
                                    <input type="hidden" name="id" value="@request.Id" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                        <i class="bi bi-trash"></i> Talebi İptal Et
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5" role="alert">
            <i class="bi bi-info-circle fs-1"></i>
            <h4 class="mt-3">Henüz üyelik talebiniz bulunmamaktadır.</h4>
            @if (hasActiveMembership)
            {
                <p>Aktif bir üyeliğiniz bulunmaktadır. Mevcut üyeliğiniz bittikten sonra yeni talep oluşturabilirsiniz.</p>
            }
            else
            {
                <p>Yeni bir salon üyeliği talebi oluşturmak için aşağıdaki butona tıklayın.</p>
                <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                    <i class="bi bi-plus-circle"></i> Yeni Talep Oluştur
                </a>
            }
        </div>
    }
</div>

@* Auto-dismiss is handled by _Layout.cshtml *@
