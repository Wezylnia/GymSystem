@inject Microsoft.AspNetCore.Identity.SignInManager<GymSystem.Domain.Entities.AppUser> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<GymSystem.Domain.Entities.AppUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse"></i> GymSystem
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Ana Sayfa
                            </a>
                        </li>
                        
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (User.IsInRole("Admin") || User.IsInRole("GymOwner"))
                            {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-graph-up-arrow"></i> Dashboard
                                </a>
                            </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="GymLocations" asp-action="Index">
                                        <i class="bi bi-building"></i> Spor Salonları
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Services" asp-action="Index">
                                        <i class="bi bi-diagram-3"></i> Hizmetler
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Trainers" asp-action="Index">
                                        <i class="bi bi-person-badge"></i> Antrenörler
                                    </a>
                                </li>
                            <li class="nav-item">
                                    <a class="nav-link" asp-controller="MembershipRequests" asp-action="Manage">
                                        <i class="bi bi-clipboard-check"></i> Üyelik Talepleri
                                    </a>
                                </li>
                            }
                            
                            @if (User.IsInRole("Admin") || User.IsInRole("GymOwner"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Members" asp-action="Index">
                                        <i class="bi bi-people"></i> Üyeler
                                    </a>
                                </li>
                            }
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointments" asp-action="Index">
                                    <i class="bi bi-calendar-check"></i> Randevular
                                </a>
                            </li>
                            
                                @if (User.IsInRole("Member"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="MembershipRequests" asp-action="Index">
                                            <i class="bi bi-card-checklist"></i> Üyelik Taleplerim
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="AIWorkoutPlans" asp-action="Index">
                                            <i class="bi bi-robot"></i> AI Planlarım
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="BodyMeasurements" asp-action="Index">
                                            <i class="bi bi-graph-up"></i> Boy-Kilo Takibi
                                        </a>
                                    </li>
                                }
                            }
                    </ul>
                    
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User.Identity!.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Profilim</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Kayıt Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert" id="errorAlert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["WarningMessage"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert" id="warningAlert">
                    <i class="bi bi-exclamation-circle-fill"></i> @TempData["WarningMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert" id="infoAlert">
                    <i class="bi bi-info-circle-fill"></i> @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>
    
    <!-- Global Confirmation Modal -->
    <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" id="confirmModalHeader">
                    <h5 class="modal-title" id="confirmModalLabel">
                        <i class="bi bi-exclamation-triangle" id="confirmModalIcon"></i>
                        <span id="confirmModalTitle">Onay</span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="confirmModalBody">
                    <!-- Dynamic content -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="confirmModalCancelBtn">
                        <i class="bi bi-x"></i> İptal
                    </button>
                    <button type="button" class="btn btn-danger" id="confirmModalConfirmBtn">
                        <i class="bi bi-check"></i> Onayla
                    </button>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - GymSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Global Confirmation Modal Function
        let confirmModalCallback = null;
        
        function showConfirmModal(options) {
            const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
            const defaults = {
                title: 'Onay',
                message: 'Bu işlemi yapmak istediğinizden emin misiniz?',
                icon: 'bi-exclamation-triangle',
                iconColor: 'text-warning',
                headerClass: 'bg-warning text-dark',
                confirmText: 'Onayla',
                confirmClass: 'btn-danger',
                cancelText: 'İptal',
                onConfirm: null,
                onCancel: null
            };
            
            const settings = { ...defaults, ...options };
            
            // Set modal content
            document.getElementById('confirmModalTitle').textContent = settings.title;
            document.getElementById('confirmModalBody').innerHTML = settings.message;
            document.getElementById('confirmModalIcon').className = `bi ${settings.icon}`;
            document.getElementById('confirmModalHeader').className = `modal-header ${settings.headerClass}`;
            document.getElementById('confirmModalConfirmBtn').innerHTML = `<i class="bi bi-check"></i> ${settings.confirmText}`;
            document.getElementById('confirmModalConfirmBtn').className = `btn ${settings.confirmClass}`;
            document.getElementById('confirmModalCancelBtn').innerHTML = `<i class="bi bi-x"></i> ${settings.cancelText}`;
            
            // Set callback
            confirmModalCallback = settings.onConfirm;
            
            // Show modal
            modal.show();
        }
        
        // Handle confirm button click
        document.getElementById('confirmModalConfirmBtn').addEventListener('click', function() {
            if (confirmModalCallback) {
                confirmModalCallback();
                confirmModalCallback = null; // Reset callback
            }
            const modalEl = document.getElementById('confirmModal');
            const modal = bootstrap.Modal.getInstance(modalEl);
            if (modal) {
                modal.hide();
            }
        });
        
        // Auto-dismiss alerts after specified seconds
        $(document).ready(function() {
            setTimeout(function() {
                $('#successAlert').fadeOut('slow', function() {
                    $(this).alert('close');
                });
            }, 5000);
            
            setTimeout(function() {
                $('#errorAlert').fadeOut('slow', function() {
                    $(this).alert('close');
                });
            }, 7000);
            
            setTimeout(function() {
                $('#warningAlert').fadeOut('slow', function() {
                    $(this).alert('close');
                });
            }, 6000);
            
            setTimeout(function() {
                $('#infoAlert').fadeOut('slow', function() {
                    $(this).alert('close');
                });
            }, 5000);
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
