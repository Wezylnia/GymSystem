@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Custom phone validation for Turkish format
            $.validator.addMethod("turkishphone", function(value, element) {
                if (!value) return true; // Optional field
                // Remove all non-digit characters
                var cleaned = value.replace(/\D/g, '');
                // Check if it starts with 0 and has 11 digits or starts with country code
                return /^(0[0-9]{10}|90[0-9]{10}|\+90[0-9]{10})$/.test(cleaned) || /^[0-9]{10}$/.test(cleaned);
            }, "Geçerli bir Türk telefon numarası giriniz (örn: 05551234567)");

            // Apply Turkish phone validation
            $("#PhoneNumber").rules("add", {
                turkishphone: true
            });

            // Real-time character counter for Description
            $("#Description").on('input', function() {
                var maxLength = 1000;
                var currentLength = $(this).val().length;
                var remaining = maxLength - currentLength;
                var counterEl = $("#descriptionCounter");
                
                if (counterEl.length === 0) {
                    $(this).after('<div id="descriptionCounter" class="form-text"></div>');
                    counterEl = $("#descriptionCounter");
                }
                
                counterEl.text(remaining + ' karakter kaldı');
                
                if (remaining < 100) {
                    counterEl.removeClass('text-muted').addClass('text-warning');
                } else {
                    counterEl.removeClass('text-warning').addClass('text-muted');
                }
            });

            // Trim whitespace on blur
            $('input[type="text"], input[type="email"], input[type="tel"], textarea').on('blur', function() {
                $(this).val($.trim($(this).val()));
            });

            // Format phone number on input
            $("#PhoneNumber").on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                if (value.length > 0) {
                    if (value.startsWith('0')) {
                        // Format: 0555 123 45 67
                        if (value.length > 4) value = value.substring(0, 4) + ' ' + value.substring(4);
                        if (value.length > 8) value = value.substring(0, 8) + ' ' + value.substring(8);
                        if (value.length > 11) value = value.substring(0, 11) + ' ' + value.substring(11);
                        if (value.length > 14) value = value.substring(0, 14);
                    } else {
                        if (value.length > 3) value = value.substring(0, 3) + ' ' + value.substring(3);
                        if (value.length > 7) value = value.substring(0, 7) + ' ' + value.substring(7);
                        if (value.length > 10) value = value.substring(0, 10) + ' ' + value.substring(10);
                    }
                    $(this).val(value);
                }
            });

            // Show validation feedback with icons
            $('form').on('submit', function() {
                if (!$(this).valid()) {
                    // Scroll to first error
                    var firstError = $('.input-validation-error:first');
                    if (firstError.length) {
                        $('html, body').animate({
                            scrollTop: firstError.offset().top - 100
                        }, 500);
                        firstError.focus();
                    }
                    return false;
                }
            });

            // Visual feedback for valid/invalid fields
            $('input, textarea, select').on('blur', function() {
                var field = $(this);
                setTimeout(function() {
                    if (field.valid()) {
                        field.removeClass('is-invalid').addClass('is-valid');
                    } else {
                        field.removeClass('is-valid').addClass('is-invalid');
                    }
                }, 100);
            });
        });
    </script>
