@model GymSystem.Mvc.Models.MemberViewModel

@{
    ViewData["Title"] = "Üye Detaylarý";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-person-circle"></i> Üye Detaylarý
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-muted">Kiþisel Bilgiler</h5>
                            <hr/>
                            
                            <div class="mb-2">
                                <strong>ID:</strong> #@Model.Id
                            </div>
                            
                            <div class="mb-2">
                                <strong>Ad Soyad:</strong> 
                                <span class="fs-5">@Model.FirstName @Model.LastName</span>
                            </div>
                            
                            <div class="mb-2">
                                <strong>Email:</strong> 
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </div>
                            
                            <div class="mb-2">
                                <strong>Telefon:</strong> 
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                                }
                                else
                                {
                                    <span class="text-muted">Belirtilmemiþ</span>
                                }
                            </div>
                            
                            <div class="mb-2">
                                <strong>Durum:</strong> 
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> Pasif
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-muted">Üyelik Bilgileri</h5>
                            <hr/>
                            
                            <div class="mb-2">
                                <strong>Salon:</strong> 
                                @if (!string.IsNullOrEmpty(Model.CurrentGymLocationName))
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-building"></i> @Model.CurrentGymLocationName
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Salon üyeliði yok</span>
                                }
                            </div>
                            
                            <div class="mb-2">
                                <strong>Üyelik Durumu:</strong> 
                                @if (Model.HasActiveMembership)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Aktif Üyelik
                                    </span>
                                }
                                else if (Model.MembershipEndDate.HasValue)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> Süresi Dolmuþ
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-dash-circle"></i> Üyelik Yok
                                    </span>
                                }
                            </div>
                            
                            <div class="mb-2">
                                <strong>Baþlangýç Tarihi:</strong> 
                                @if (Model.MembershipStartDate != DateTime.MinValue)
                                {
                                    @Model.MembershipStartDate.ToString("dd.MM.yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </div>
                            
                            <div class="mb-2">
                                <strong>Bitiþ Tarihi:</strong> 
                                @if (Model.MembershipEndDate.HasValue)
                                {
                                    @Model.MembershipEndDate.Value.ToString("dd.MM.yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Belirtilmemiþ</span>
                                }
                            </div>
                            
                            @if (Model.DaysRemaining.HasValue)
                            {
                                <div class="mb-2">
                                    <strong>Kalan Süre:</strong> 
                                    @if (Model.DaysRemaining.Value > 30)
                                    {
                                        <span class="badge bg-success">@Model.DaysRemaining gün</span>
                                    }
                                    else if (Model.DaysRemaining.Value > 7)
                                    {
                                        <span class="badge bg-warning">@Model.DaysRemaining gün</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@Model.DaysRemaining gün - Yenilenmeli!</span>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <hr/>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <h5 class="text-muted">Sistem Bilgileri</h5>
                            <hr/>
                            
                            <div class="mb-2">
                                <strong>Kayýt Tarihi:</strong> 
                                @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")
                            </div>
                            
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div class="mb-2">
                                    <strong>Son Güncelleme:</strong> 
                                    @Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm:ss")
                                </div>
                            }
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Geri
                        </a>
                        @if (User.IsInRole("Admin") || User.IsInRole("GymOwner"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <button type="button" 
                                        class="btn btn-danger" 
                                        onclick="confirmDelete(@Model.Id, '@Model.FirstName @Model.LastName')">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Üye Silme Onayý
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteMemberName"></strong> isimli üyeyi silmek istediðinize emin misiniz?</p>
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>UYARI:</strong> Bu iþlem geri alýnamaz!
                    <ul class="mt-2 mb-0">
                        <li>Üyenin tüm üyelik talepleri silinecek</li>
                        <li>Üyenin tüm randevularý silinecek</li>
                        <li>Üyenin tüm AI planlarý silinecek</li>
                        <li>Ýliþkili tüm kayýtlar kalýcý olarak silinecek</li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x"></i> Ýptal
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Evet, Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(memberId, memberName) {
            document.getElementById('deleteMemberName').textContent = memberName;
            document.getElementById('deleteForm').action = '/Members/Delete/' + memberId;
            
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}
