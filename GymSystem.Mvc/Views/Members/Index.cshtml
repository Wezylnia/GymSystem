@model List<GymSystem.Mvc.Models.MemberViewModel>

@{
    ViewData["Title"] = "Üye Listesi";
}

<div class="container mt-4">
<h1 class="mb-4">
    <i class="bi bi-people"></i> Üye Listesi
</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Üye Ekle
            </a>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        @if (User.IsInRole("Admin") || User.IsInRole("GymOwner"))
                        {
                            <th class="text-center">İşlemler</th>
                        }
                        <th>ID</th>
                        <th>Ad Soyad</th>
                        <th>Cinsiyet</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Salon Üyeliği</th>
                        <th>Üyelik Durumu</th>
                        <th>Başlangıç</th>
                        <th>Bitiş</th>
                        <th>Kalan</th>
                        <th>Kayıt Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            @if (User.IsInRole("Admin") || User.IsInRole("GymOwner"))
                            {
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@member.Id" 
                                           class="btn btn-sm btn-info" 
                                           title="Detaylar">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @* GymOwner sadece aktif üyeliği olan kişileri düzenleyebilir *@
                                        @if (User.IsInRole("Admin") || (User.IsInRole("GymOwner") && member.HasActiveMembership))
                                        {
                                            <a asp-action="Edit" asp-route-id="@member.Id" 
                                               class="btn btn-sm btn-warning" 
                                               title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                        @* Sadece Admin silebilir *@
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <button type="button" 
                                                    class="btn btn-sm btn-danger" 
                                                    onclick="confirmDelete(@member.Id, '@member.FirstName @member.LastName')"
                                                    title="Sil">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            }
                            <td>@member.Id</td>
                            <td>
                                <strong>@member.FirstName @member.LastName</strong>
                            </td>
                            <td>
                                @if (member.Gender == GymSystem.Domain.Enums.Gender.Female)
                                {
                                    <span class="badge bg-pink text-dark">
                                        <i class="bi bi-gender-female"></i> Kadın
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">
                                        <i class="bi bi-gender-male"></i> Erkek
                                    </span>
                                }
                            </td>
                            <td>
                                <small>@member.Email</small>
                            </td>
                            <td>@(member.PhoneNumber ?? "-")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(member.CurrentGymLocationName))
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-building"></i> @member.CurrentGymLocationName
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Salon üyeliği yok</span>
                                }
                            </td>
                            <td>
                                @if (member.HasActiveMembership)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Aktif
                                    </span>
                                }
                                else if (member.MembershipEndDate.HasValue)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> Süresi Dolmuş
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-dash-circle"></i> Üyelik Yok
                                    </span>
                                }
                            </td>
                                                        <td>
                                                            @if (member.MembershipStartDate.HasValue)
                                                            {
                                                                @member.MembershipStartDate.Value.ToString("dd.MM.yyyy")
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (member.MembershipEndDate.HasValue)
                                                            {
                                                                @member.MembershipEndDate.Value.ToString("dd.MM.yyyy")
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (member.DaysRemaining.HasValue)
                                                            {
                                                                if (member.DaysRemaining.Value > 30)
                                                                {
                                                                    <span class="badge bg-success">@member.DaysRemaining gün</span>
                                                                }
                                                                else if (member.DaysRemaining.Value > 7)
                                                                {
                                                                    <span class="badge bg-warning">@member.DaysRemaining gün</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-danger">@member.DaysRemaining gün</span>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <small>@member.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="alert alert-info mt-3" role="alert">
                                        <i class="bi bi-info-circle"></i> 
                                        <strong>Toplam:</strong> @Model.Count üye | 
                                        <strong>Aktif Üyelik:</strong> @Model.Count(m => m.HasActiveMembership) | 
                                        <strong>Üyeliği Yok:</strong> @Model.Count(m => !m.MembershipEndDate.HasValue)
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info" role="alert">
                                        <i class="bi bi-info-circle"></i> Henüz üye kaydı bulunmamaktadır.
                                    </div>
                                }
                            </div>

@section Scripts {
    <script>
        // Delete confirmation using global modal
        function confirmDelete(memberId, memberName) {
            showConfirmModal({
                title: 'Üye Silme Onayı',
                message: `
                    <p><strong>${memberName}</strong> isimli üyeyi silmek istediğinizden emin misiniz?</p>
                    <div class="alert alert-danger mt-3">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>UYARI:</strong> Bu işlem geri alınamaz!
                        <ul class="mt-2 mb-0">
                            <li>Üyenin tüm üyelik talepleri silinecek</li>
                            <li>Üyenin tüm randevuları silinecek</li>
                            <li>Üyenin tüm AI planları silinecek</li>
                            <li>İlişkili tüm kayıtlar kalıcı olarak silinecek</li>
                        </ul>
                    </div>
                `,
                icon: 'bi-trash',
                iconColor: 'text-danger',
                headerClass: 'bg-danger text-white',
                confirmText: 'Evet, Sil',
                confirmClass: 'btn-danger',
                cancelText: 'İptal',
                onConfirm: function() {
                    // Create and submit form
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/Members/Delete/' + memberId;
                    
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token;
                    
                    form.appendChild(tokenInput);
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
    
    <!-- Hidden token for delete form -->
    @Html.AntiForgeryToken()
    
    <style>
        .bg-pink {
            background-color: #ff69b4 !important;
        }
    </style>
}
