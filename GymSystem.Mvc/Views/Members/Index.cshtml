@model List<GymSystem.Mvc.Models.MemberViewModel>

@{
    ViewData["Title"] = "Üye Listesi";
}

<div class="container mt-4">
    <h1 class="mb-4">Üye Listesi</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Üye Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Üyelik Başlangıç</th>
                        <th>Üyelik Bitiş</th>
                        <th>Durum</th>
                        <th>Kayıt Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>@member.Id</td>
                            <td>@member.FirstName</td>
                            <td>@member.LastName</td>
                            <td>@member.Email</td>
                            <td>@(member.PhoneNumber ?? "-")</td>
                            <td>@member.MembershipStartDate.ToString("dd.MM.yyyy")</td>
                            <td>@(member.MembershipEndDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            <td>
                                @if (member.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                            <td>@member.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Henüz üye kaydı bulunmamaktadır.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss success message after 3 seconds
        setTimeout(function() {
            var alert = document.querySelector('.alert-success');
            if (alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 3000);
    </script>
}
