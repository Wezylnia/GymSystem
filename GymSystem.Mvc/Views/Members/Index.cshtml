@model List<GymSystem.Mvc.Models.MemberViewModel>

@{
    ViewData["Title"] = "Üye Listesi";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-people"></i> Üye Listesi
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Üye Ekle
            </a>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Salon Üyeliği</th>
                        <th>Üyelik Durumu</th>
                        <th>Başlangıç</th>
                        <th>Bitiş</th>
                        <th>Kalan</th>
                        <th>Kayıt Tarihi</th>
                        @if (User.IsInRole("Admin") || User.IsInRole("GymOwner"))
                        {
                            <th class="text-center">İşlemler</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>@member.Id</td>
                            <td>
                                <strong>@member.FirstName @member.LastName</strong>
                            </td>
                            <td>
                                <small>@member.Email</small>
                            </td>
                            <td>@(member.PhoneNumber ?? "-")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(member.CurrentGymLocationName))
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-building"></i> @member.CurrentGymLocationName
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Salon üyeliği yok</span>
                                }
                            </td>
                            <td>
                                @if (member.HasActiveMembership)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Aktif
                                    </span>
                                }
                                else if (member.MembershipEndDate.HasValue)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> Süresi Dolmuş
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-dash-circle"></i> Üyelik Yok
                                    </span>
                                }
                            </td>
                            <td>
                                @if (member.MembershipStartDate != DateTime.MinValue)
                                {
                                    @member.MembershipStartDate.ToString("dd.MM.yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (member.MembershipEndDate.HasValue)
                                {
                                    @member.MembershipEndDate.Value.ToString("dd.MM.yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (member.DaysRemaining.HasValue)
                                {
                                    if (member.DaysRemaining.Value > 30)
                                    {
                                        <span class="badge bg-success">@member.DaysRemaining gün</span>
                                    }
                                    else if (member.DaysRemaining.Value > 7)
                                    {
                                        <span class="badge bg-warning">@member.DaysRemaining gün</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@member.DaysRemaining gün</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <small>@member.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                            </td>
                            @if (User.IsInRole("Admin") || User.IsInRole("GymOwner"))
                            {
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@member.Id" 
                                           class="btn btn-sm btn-info" 
                                           title="Detaylar">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@member.Id" 
                                           class="btn btn-sm btn-warning" 
                                           title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-danger" 
                                                onclick="confirmDelete(@member.Id, '@member.FirstName @member.LastName')"
                                                title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="alert alert-info mt-3" role="alert">
            <i class="bi bi-info-circle"></i> 
            <strong>Toplam:</strong> @Model.Count üye | 
            <strong>Aktif Üyelik:</strong> @Model.Count(m => m.HasActiveMembership) | 
            <strong>Üyeliği Yok:</strong> @Model.Count(m => !m.MembershipEndDate.HasValue)
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Henüz üye kaydı bulunmamaktadır.
        </div>
    }
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Üye Silme Onayı
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteMemberName"></strong> isimli üyeyi silmek istediğinize emin misiniz?</p>
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>UYARI:</strong> Bu işlem geri alınamaz!
                    <ul class="mt-2 mb-0">
                        <li>Üyenin tüm üyelik talepleri silinecek</li>
                        <li>Üyenin tüm randevuları silinecek</li>
                        <li>Üyenin tüm AI planları silinecek</li>
                        <li>İlişkili tüm kayıtlar kalıcı olarak silinecek</li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x"></i> İptal
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Evet, Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss success message after 3 seconds
        setTimeout(function() {
            var alert = document.querySelector('.alert-success');
            if (alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 3000);

        // Delete confirmation
        function confirmDelete(memberId, memberName) {
            document.getElementById('deleteMemberName').textContent = memberName;
            document.getElementById('deleteForm').action = '/Members/Delete/' + memberId;
            
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}
