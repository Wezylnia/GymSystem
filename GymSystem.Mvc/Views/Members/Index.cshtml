@model List<GymSystem.Mvc.Models.MemberViewModel>

@{
    ViewData["Title"] = "Üye Listesi";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-people"></i> Üye Listesi
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Üye Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Salon Üyeliği</th>
                        <th>Üyelik Durumu</th>
                        <th>Başlangıç</th>
                        <th>Bitiş</th>
                        <th>Kalan</th>
                        <th>Kayıt Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>@member.Id</td>
                            <td>
                                <strong>@member.FirstName @member.LastName</strong>
                            </td>
                            <td>
                                <small>@member.Email</small>
                            </td>
                            <td>@(member.PhoneNumber ?? "-")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(member.CurrentGymLocationName))
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-building"></i> @member.CurrentGymLocationName
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Salon üyeliği yok</span>
                                }
                            </td>
                            <td>
                                @if (member.HasActiveMembership)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Aktif
                                    </span>
                                }
                                else if (member.MembershipEndDate.HasValue)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> Süresi Dolmuş
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-dash-circle"></i> Üyelik Yok
                                    </span>
                                }
                            </td>
                            <td>
                                @if (member.MembershipStartDate != DateTime.MinValue)
                                {
                                    @member.MembershipStartDate.ToString("dd.MM.yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (member.MembershipEndDate.HasValue)
                                {
                                    @member.MembershipEndDate.Value.ToString("dd.MM.yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (member.DaysRemaining.HasValue)
                                {
                                    if (member.DaysRemaining.Value > 30)
                                    {
                                        <span class="badge bg-success">@member.DaysRemaining gün</span>
                                    }
                                    else if (member.DaysRemaining.Value > 7)
                                    {
                                        <span class="badge bg-warning">@member.DaysRemaining gün</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@member.DaysRemaining gün</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <small>@member.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="alert alert-info mt-3" role="alert">
            <i class="bi bi-info-circle"></i> 
            <strong>Toplam:</strong> @Model.Count üye | 
            <strong>Aktif Üyelik:</strong> @Model.Count(m => m.HasActiveMembership) | 
            <strong>Üyeliği Yok:</strong> @Model.Count(m => !m.MembershipEndDate.HasValue)
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Henüz üye kaydı bulunmamaktadır.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss success message after 3 seconds
        setTimeout(function() {
            var alert = document.querySelector('.alert-success');
            if (alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 3000);
    </script>
}
