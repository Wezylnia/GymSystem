@model List<GymSystem.Mvc.Models.AppointmentViewModel>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-calendar-check"></i> Randevular</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Randevu Al
        </a>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Üye</th>
                        <th>Antrenör</th>
                        <th>Hizmet</th>
                        <th>Tarih & Saat</th>
                        <th>Süre</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model.OrderByDescending(a => a.AppointmentDate))
                    {
                        <tr>
                            <td>@appointment.Id</td>
                            <td>@appointment.MemberName</td>
                            <td>@appointment.TrainerName</td>
                            <td>@appointment.ServiceName</td>
                            <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@appointment.DurationMinutes dk</td>
                            <td>₺@appointment.Price.ToString("N2")</td>
                            <td>
                                @switch (appointment.Status)
                                {
                                    case "Pending":
                                        <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                                        break;
                                    case "Confirmed":
                                        <span class="badge bg-success">Onaylandı</span>
                                        break;
                                    case "Cancelled":
                                        <span class="badge bg-danger">İptal Edildi</span>
                                        break;
                                    case "Completed":
                                        <span class="badge bg-info">Tamamlandı</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@appointment.Status</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (appointment.Status == "Pending" && (User.IsInRole("Admin") || User.IsInRole("GymOwner")))
                                {
                                    <form asp-action="Confirm" asp-route-id="@appointment.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success" title="Onayla">
                                            <i class="bi bi-check-circle"></i> Onayla
                                        </button>
                                    </form>
                                }
                                @if ((appointment.Status == "Pending" || appointment.Status == "Confirmed") && appointment.AppointmentDate > DateTime.Now)
                                {
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#cancelModal@(appointment.Id)" title="İptal Et">
                                        <i class="bi bi-x-circle"></i> İptal
                                    </button>
                                }
                            </td>
                        </tr>

                        <!-- Cancel Modal -->
                        <div class="modal fade" id="cancelModal@(appointment.Id)" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Randevuyu İptal Et</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <form asp-action="Cancel" asp-route-id="@appointment.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="modal-body">
                                            <p><strong>@appointment.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</strong> tarihli randevuyu iptal etmek istediğinizden emin misiniz?</p>
                                            <div class="mb-3">
                                                <label for="reason" class="form-label">İptal Nedeni (Opsiyonel)</label>
                                                <textarea name="reason" class="form-control" rows="3" placeholder="İptal nedeninizi yazabilirsiniz..."></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                            <button type="submit" class="btn btn-danger">İptal Et</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Henüz randevu kaydı bulunmamaktadır.
        </div>
    }
</div>

@* Auto-dismiss is handled by _Layout.cshtml *@
